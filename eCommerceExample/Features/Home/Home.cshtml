@{
    ViewData["Title"] = "Home Page";
}

<div class="container body-container">
    <!--Home Carousel-->
    <section class="section-padding">
        <div class="col-lg-12 col-md-12">
            <div id="homeCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
                    <button type="button" data-bs-target="#homeCarousel" data-bs-slide-to="2" aria-label="Slide 3" aria-current="true"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="container">
                            <div class="carousel-caption text-center">
                                <img src="https://nookbookblobstorage.blob.core.windows.net/book-covers/carousel-hiring.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container">
                            <div class="carousel-caption text-center">
                                <img src="https://nookbookblobstorage.blob.core.windows.net/book-covers/carousel-popular-books.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="container">
                            <div class="carousel-caption text-center">
                                <img src="https://nookbookblobstorage.blob.core.windows.net/book-covers/carousel-spring-sale.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--Shop by Category Cards-->
    <section class="section-padding">
        <div class="row col-lg-12 col-md-12 mb-5">
            <div class="col-sm-12 col-md-6 col-lg-4 text-center">
                <a href="#">
                    <img class="img-circle75" alt="Placeholder image" src="~/images/Card_Placeholder.png" width="100%">
                </a>
                <h3 class="primary-color">Hot Reads</h3>
                <p>Check out what other people are reading right now!</p>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 text-center">
                <a href="#">
                    <img class="img-circle75" alt="Placeholder image" src="~/images/Card_Placeholder.png" width="100%">
                </a>
                <h3 class="primary-color">AAPI Month</h3>
                <p>Celebrate AAPI Month with picks by Asian-American and Pacific Islander!</p>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4 text-center">
                <a href="#">
                    <img class="img-circle75" alt="Placeholder image" src="~/images/Card_Placeholder.png" width="100%">
                </a>
                <h3 class="primary-color">Staff Picks</h3>
                <p>Enjoy these reads handpicked by our staff!</p>
            </div>
        </div>
    </section>
</div>
